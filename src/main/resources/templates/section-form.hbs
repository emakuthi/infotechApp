{{#partial "content"}}
   {{#if editSection}}
       <h1>edit this section</h1>
       <form action="/sections/{{section.id}}" method="post">
          <br>
          <label for="sectionName ">edit this section's sectionName </label>
          <input id="sectionName " name="sectionName " type="text" value="{{section.sectionName }}">
          <br>
          <label for="departmentId">Update this section's department:</label>
          <select id="departmentId" name="departmentId">
             {{#each departments}}
                <option value="{{id}}">{{name}}</option>
             {{/each}}
          </select>
          <p>Don't see the right department?<a href="/departments/new">Add a new one first.</a></p>
          <button type="submit" class="btn btn-success">submit</button>
       </form>
   {{else}}
       <h5>Add a new section!</h5>
       <form action="/sections" method="post">
         {{#if departments}}
             <label for="sectionName ">Section Description</label>
             <input id="sectionName " name="sectionName " type="text"></br></br>
             <label for="departmentId">select department for this section:</label>
             <select id="departmentId" name="departmentId">
                 {{#each departments}}
                     <option value="{{id}}">{{name}}</option>
                 {{/each}}
             </select></br></br>
             <p>Don't see the right department?<a href="/departments/new">Add a new one first.</a></p>
         {{else}}
             <h3> You'll need to add a department before you add a section. <a href="/departments/new">Add one here.</a> </h3>
         {{/if}}
         <button type="submit" class="btn btn-default">submit</button>
       </form>
   {{/if}}
{{/partial}}

{{> layout.hbs}}