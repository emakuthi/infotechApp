{{#partial "content"}}

   <p>Description: {{ task.description }}</p>
   <p>department of this section: {{ category.name }}</p>
   <h5>
       Task status:
       {{#if task.published }}
           <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Completed
       {{else}}
           <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Open
       {{/if}}
   </h5>
   <p>
       <a href="/tasks/{{task.id}}/edit">edit section</a>
       <a href="/categories/{{task.categoryId}}/tasks/{{task.id}}/delete">delete section</a>
   </p>

{{/partial}}

