{{#partial "content"}}
   {{#if editEmployee}}
       <h1>edit this Employee details</h1>
       <form action="/employees/{{employee.id}}" method="post">
          <br>
          <label for="employeeName">Edit Employee Name :</label>
          <input id="employeeName" name="employeeName" type="text" value="{{employee.employeeName}}">
          <br>
          <br>
          <label for="ekNo">Edit Employee Number: </label>
          <input id="ekNo" name="ekNo" type="text" value="{{employee.ekNo}}">
          <br>
          <label for="designation">Edit Designation</label>
          <input id="sectionName " name="sectionName " type="text" value="{{section.sectionName }}">
          <br>
          <label for="taskId">Update the section:</label>
          <select id="taskId" name="taskId">
             {{#each sections}}
                <option value="{{id}}">{{sectionName }}</option>
             {{/each}}
          </select>
          <p>Don't see the right section?<a href="/sections/new">Add a new one first.</a></p>
          <button type="submit" class="btn btn-success">submit</button>
       </form>
   {{else}}
       <h5>Add a new employee!</h5>
       <form action="/employees" method="post">

             <label for="employeeName">Employee Name</label>
             <input id="employeeName" name="employeeName" type="text"></br>


             <label for="ekNo">Employee Number</label>
             <input id="ekNo" name="ekNo" type="text"></br>


             <label for="designation">Designation</label>
             <input id="designation" name="designation" type="text"></br>



             <label for="taskId">select Section for this Employee:</label>
             <select id="taskId" name="taskId">
                 {{#each sections}}
                     <option value="{{id}}">{{sectionName }}</option>
                 {{/each}}
             </select></br></br>
         <button type="submit" class="btn btn-default">submit</button>
       </form>
   {{/if}}
{{/partial}}

{{> layout.hbs}}